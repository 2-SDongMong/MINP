		// viewRequests();
	})

</script>
<style>
	#request-cards-container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
		grid-gap: 3.5rem;
		justify-content: center;
		align-items: center;
	}

	img {
		width: 145%;
		height: auto;
		border-radius: 14px;
	}
	
	.card, button {
		border-radius: 24px;
	}

</style>
