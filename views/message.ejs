<div id="user-table">
  <thead class="table-dark">
    <a href="/message/received">받은편지함</a> |
    <a href="/message/sent">보낸편지함</a> |
    <a href="/message/unread">안읽은편지함</a> |
    <div id="root">
    <button type="button" id="modal_opne_btn">편지쓰기</button></div>
    <div id="modal">
   
      <div class="modal_content">
        <input type="email" name="receive_email" class="form-style" placeholder="받는사람" id="receive_email" autocomplete="off">
         
        <div class="form-group">
          <label for="message">Message</label>
          <textarea class="form-control"id="emailInputContent" name="emailInputContent" ></textarea>
        </div>
        <button onclick="emailSendMessage()" class="btn btn-outline-primary"
          type="button">submit</button>  
         
          <button type="button" id="modal_close_btn">모달 창 닫기</button>
         
      </div>
     
      <div class="modal_layer"></div>
    </div>
  </thead>
  <div>
    <div class="box1">
      내용
    </div>
    <div class="box1">
      보낸사람/받는사람
    </div>
    <div class="box1">
      시간
    </div>
  </div>
  <br>
  <hr />
  <% messages.forEach(message=> { %>
    <tbody>
      <details onclick="detail(<%= message.message_id %>)">
        <summary>
          
            <div class="box1">
              <%= message.content %>
            </div>
            <% if (message.sender_id!==userId){ %>
              <div class="box1">
                <%= message.send_user.nickname %>
              </div>
            <% } else{ %>
              <div class="box1">
                <%= message.receive_user.nickname %>
              </div>
            <% } %>
            <div class="box1">
              <%= message.created_at %>
            </div>
          
        </summary>
        <div id="inmessage">
          <div><%= message.content %></div>
          <button onclick="deleteMessage(<%= message.message_id %>)" id="target_btn" type="button">삭제</button>


            <% if (message.sender_id!==userId){ %>
            <button type="button" id="modal_opne_btn1">답장</button></div>
            <div id="modal1">
              <div class="modal_content">
                <div class="form-group">
                  <label>보내는 사람 : 나</label>
                  <%= message.receive_user.nickname %>
                </div>
                <div class="form-group">
                  <label >받는 사람</label>
                  <%= message.send_user.nickname %>
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control"id="inputContent" name="inputContent" ></textarea>
                </div>
                <button onclick="sendMessage(<%= message.sender_id %>)" class="btn btn-outline-primary"
                  type="button">submit</button>   
                  <button type="button" id="modal_close_btn1">모달 창 닫기</button>               
              </div>           
              <div class="modal_layer"></div>
            </div>


        </div>


         
            
          <% } %>
          
            
      </details>
    </tbody><br>

    
    <% }) %>
</div>


<script>
  function emailSendMessage(){{
    
    const receive_email = $('#receive_email').val();
    const emailInputContent = $('#emailInputContent').val();
    const sender_id = Number(getId(receive_email))
    $.ajax({
        type: 'POST',
        url: '/messages',
        data: JSON.stringify({
          content: emailInputContent,
          recipient_id: Number(sender_id)
        }),
        success: function (response) {
          document.location.href = document.location.href;
          alert('전송이 완료되었습니다.');

        },
        beforeSend: function (xhrObj) {
          xhrObj.setRequestHeader("Content-Type", "application/json");
          xhrObj.setRequestHeader("Accept", "application/json");
        },
      })
  }}

  function getId(email){
    var aa;
    $.ajax({
      type: 'POST',
      url:'/users/a',
      data:{email : email},
      dataType: "text",
      async:false,
      success: function (data) {
        aa=data
      }
    });
    return aa;
  }
  
    

  function sendMessage(sender_id) {
    const inputContent = $('#inputContent').val();
    if (!inputContent) {
      alert('내용을 입력해주세요.');
    } else {
      $.ajax({
        type: 'POST',
        url: '/messages',
        data: JSON.stringify({
          content: inputContent,
          recipient_id: Number(sender_id)
        }),
        success: function (response) {
          document.location.href = document.location.href;
          alert('전송이 완료되었습니다.');

        },
        beforeSend: function (xhrObj) {
          xhrObj.setRequestHeader("Content-Type", "application/json");
          xhrObj.setRequestHeader("Accept", "application/json");
        },
      })
    }
  }
  function deleteMessage(message_id) {
    $.ajax({
      type: 'DELETE',
      url: `/messages/:${message_id}`,
      success: function (data) {
        document.location.href = document.location.href;
        alert("삭제완료")
        return data;
      },
    })
  }
  function detail(message_id) {
    $.ajax({
      type: 'GET',
      url: `/messages/:${message_id}`,
      success: function (data) {
        return data;
      }
    })

  }

  document.getElementById("modal_opne_btn").onclick = function() {
        document.getElementById("moda").style.display="block";
    }
   
    document.getElementById("modal_close_btn").onclick = function() {
        document.getElementById("moda").style.display="none";
    }   
    document.getElementById("modal_opne_btn1").onclick = function() {
        document.getElementById("modal1").style.display="block";
    }
   
    document.getElementById("modal_close_btn1").onclick = function() {
        document.getElementById("modal1").style.display="none";
    } 
</script>

