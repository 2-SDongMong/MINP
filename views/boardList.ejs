<section class="notice">
    <div class="page-title">
        <div class="container">
            <h3>자유게시판</h3>
        </div>
    </div>
  
    <!-- board list area -->
    <div id="board-list">
        <div class="container">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col" class="th-num">번호</th>
                    <th scope="col" class="th-ctg">카테고리</th>
                    <th scope="col" class="th-title">제목</th>
                    <th scope="col" class="th-writer">작성자</th>
                    <th scope="col" class="th-date">등록일</th>
               </tr>
                </thead>
            <tbody>
                <% for (let i = 0; i < posts.data.length ; i++) {
                    const post = posts.data[i];
                    const created_at = post.created_at.toLocaleString(); %>
                
                <tr>
                    <td scope="row"><%= post.post_id %></td>
                    <td><a href="#!"><%= post.category %></a></td> 
                    <th><a href='/boardDetail/<%= post.post_id %>'><%= post.title %> </a></th>
                    <td><%= post.user_id %></td>
                    <td><%= created_at %></td>
                </tr>
                <% } %>
                </tbody>
            </table>

        </div>
    </div>
    

    <div class="pgn">
        <nav aria-label="...">
            <ul class="pagination justify-content-center">
              <% if(Number(posts.meta.page) == 1) { %>
              <li class="page-item disabled">
                <a class="page-link" href="/boardList?page=<%= Number(posts.meta.page) %>" tabindex="-1" aria-disabled="true" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <% } else {%>
              <li class="page-item"></li>
                <a class="page-link" href="/boardList?page=<%= Number(posts.meta.page) - 1 %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <% } %>

              <% for (let i = 0; i < posts.meta.last_Page ; i++) { 
                if((i+1) == Number(posts.meta.page)) { %>

                <li class="page-item active""><a class="page-link" href="/boardList?page=<%= i+1 %>" aria-current="page"><%= i+1 %></a></li>
                <% } else {%>

                <li class="page-item"><a class="page-link" href="/boardList?page=<%= i+1 %>"><%= i+1 %></a></li>
                <% } %>
              <% } %>


              <% if(Number(posts.meta.page) == posts.meta.last_Page) { %>
              <li class="page-item disabled">
                <a class="page-link" href="/boardList?page=<%= Number(posts.meta.page) %>" tabindex="-1" aria-disabled="true" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
              <% } else {%>
              <li class="page-item"></li>
                <a class="page-link" href="/boardList?page=<%= Number(posts.meta.page) + 1 %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
              <% } %>
            </ul>
        </nav>
    </div>
    <a href='/boardPost' class="btn btn-success">글쓰기</a>

    
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand">검색</a>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
    </nav>  
  
</section>

<script>
    $(document).ready(function() {
        viewBoardLists();
    });

    async function viewBoardLists() {
        $.ajax({
            type: "GET",
            url: '/posts',
            success: function (response) {
                
            },
            error: function (err) {
                console.log(response.responseJSON.message);
            }
        });
    }

</script>